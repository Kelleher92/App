<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eyes.eyes.MenuActivity"
    android:background="#d96e70">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        android:id="@+id/Imagebutton"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="60dp"
        android:onClick="Image"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/Animbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video"
        android:id="@+id/Videobutton"
        android:textStyle="bold"
        android:textSize="60dp"
        android:onClick="Video"
        android:layout_marginLeft="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="63dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:onClick="Test"
        android:id="@+id/Testbutton"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_marginLeft="63dp"
        android:layout_marginEnd="26dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/Animbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stream"
        android:id="@+id/Streambutton"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="50dp"
        android:onClick="Stream"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/Videobutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Face"
        android:onClick="Face"
        android:id="@+id/Facebutton"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_marginLeft="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Testbutton"
        android:elegantTextHeight="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anim"
        android:onClick="Animation"
        android:id="@+id/Animbutton"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_marginLeft="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/Videobutton" />
</RelativeLayout>
